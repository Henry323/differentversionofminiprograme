<!--pages/personalinfor/personalinfor.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
      <text class='left'>IDnum：</text><text class='right'>{{myinfo.no}}</text>
    </view>
    <view class='item'>
      <text class='left'>Name：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    
    <view class='item'>
      <text class='left'>Major：</text><text class='right'>{{myinfo.departmentname}}</text>
    </view>
    <view class='item' bindtap='setemail'>
     <text class='left'> E-mail：</text><text class='right' wx:if="{{myinfo.email==''|| myinfo.email==null}}">unbind</text><text class='right' wx:else>{{myinfo.email}}</text>
    </view>
    <view class='item' bindtap='exit'>
      <text class='left'>Logout：</text><text class='right'>>>></text>
    </view>
  
</view>

